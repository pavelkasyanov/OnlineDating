<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.onlinedating.model">

    <class name="Message" table="Message">
        <id name="message_id" type="java.lang.Integer">
            <column name="MessageID" />
            <generator class="identity">
            </generator>
        </id>

        <property name="text" type="string">
            <column name="text" not-null="true" unique="true" />
        </property>

        <property name="date" type="java.util.Date">
            <column name="DATE"  not-null="true" unique="true" />
        </property>

        <many-to-one name="friend" class="User">
            <column name="Other_UserID" ></column>
        </many-to-one>


        <many-to-one name="messageList" class="MessageList">
            <column name="MessageList_MessageListID" ></column>
        </many-to-one>



    </class>
</hibernate-mapping>